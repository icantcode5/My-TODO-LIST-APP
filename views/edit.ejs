<!DOCTYPE html>
<html lang="en">
<head>
    <title>ToDo App</title>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=Edu+TAS+Beginner:wght@500&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css"
    integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
    <link rel="stylesheet" href="/style.css">
</head>
<body>

    <section class = "todo-container">
        <h2>Edit List Item</h2>
        <section class = "todo">
            <ul class="todo-list">
                <% todoTasks.forEach(element => {%>
                    <% if(element._id == idTask){ %>
                        <li class="todo-list-item">
                            <form action="/edit/<%= element._id %>" method = "POST">
                                <input type="text" name="title"  value="<%= element.title %>">
                                <textarea name="content" cols="45" rows="6" ><%= element.content %></textarea>
                                <button type="submit" class="confirm" >Confirm</button>
                               <a href="/" class="cancel">Cancel</a>
                            </form>
                        </li>
                        <% }else { %>
                                    <li class="todo-list-item">
                                        <div class="todo-list-item-title">
                                            <%= element.title %>
                                        </div>
                                        <div class="todo-list-item-content">
                                            <%= element.content%>
                                        </div>
                                        <a href="/edit/<%= element._id %>" class="edit"><span class="fas fa-edit"></span></a>
                                        <a href="/remove/<%= element._id %>" class="remove"><span class="fas fa-times"></span></a>
                                    </li>
                                <% } %>
                                <% }) %>
            </ul>        
        </section>
    </section>
</body>
</html>